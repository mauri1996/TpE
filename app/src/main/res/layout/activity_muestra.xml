<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.user.redeye.CapaLogica.muestra">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paisaje"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_vol_list"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/btn_vol_list"
                android:gravity="center|start"
                android:text="Lista de Lugares Visitados"
                android:textAllCaps="true"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="0dp" />

            <ListView
                android:id="@+id/lista_1"
                style="@android:style/Widget.Holo.ListView.DropDown"
                android:layout_width="wrap_content"
                android:layout_height="738dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/textView2"
                android:cacheColorHint="@color/viewfinder_laser"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:scrollbars="horizontal"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="69dp"
                tools:textAlignment="center" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_vol_list"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="bottom|end"
            android:text="Volver Menu"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
